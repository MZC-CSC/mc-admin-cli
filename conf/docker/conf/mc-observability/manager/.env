########## OTEL ##########
JAVA_TOOL_OPTIONS=-javaagent:/opentelemetry-javaagent.jar -XX:-UseContainerSupport
# ===== include/exclude span  =====
OTEL_INSTRUMENTATION_RUNTIME_METRICS_ENABLED=false
# ===== service options =====
OTEL_SERVICE_NAME=mc-observability-manager
OTEL_METRICS_EXPORTER=none
OTEL_LOGS_EXPORTER=none
OTEL_TRACES_EXPORTER=otlp
OTEL_EXPORTER_OTLP_ENDPOINT=http://mc-observability-tempo:4318
