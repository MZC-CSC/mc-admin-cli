############################################################
# manager.env
# 1. Modify the commented sections only when necessary.
# 2. To use the Notification feature, you must configure
#    external integration details (Slack / SMTP / Naver Cloud)
#    before starting the service.
############################################################

########## Notification ##########
# Notification - EMAIL
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_AUTH=true
SMTP_TLS_ENABLE=true
SMTP_TLS_REQUIRED=true

# Notification - SMS
SMS_FROM=
SMS_SERVICE_ID=
SMS_ACCESS_KEY=
SMS_SECRET_KEY=
SMS_PROVIDER=naver-cloud
SMS_BASEURL=https://sens.apigw.ntruss.com

# Notification - Kakao
KAKAO_CHANNEL_ID=
KAKAO_TEMPLATE_CODE=
KAKAO_SERVICE_ID=
KAKAO_ACCESS_KEY=
KAKAO_SECRET_KEY=
KAKAO_PROVIDER=naver-cloud
KAKAO_BASEURL=https://sens.apigw.ntruss.com

# Notification - Slack
SLACK_OAUTH_TOKEN=
SLACK_BASEURL=https://slack.com
SLACK_API_PATH=/api/chat.postMessage
